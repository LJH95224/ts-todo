{
  "defaultSeverity": "warning",
  "extends": [
    "tslint:recommended"
  ],
  "linterOptions": {
    "exclude": [
      "node_modules/**",
      ".vscode/**",
      ".idea/**"
    ]
  },
  "rules": {
    "indent": [true, "tab", 2],
    "interface-name": false,
    "no-consecutive-blank-lines": false,
    "object-literal-sort-keys": false,
    "ordered-imports": false,
    "no-console": false,
    "quotemark": [true, "single"],
    "semicolon": [
      false,
      "always"
    ]
  }
}
